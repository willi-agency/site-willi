---
// src/layouts/Layout.astro
import "../styles/global.css";
import { config } from "../config/site.ts";
import {
  jsonLdWebsite,
  jsonLdOrganization,
  jsonLdServices,
  jsonLdFAQ,
} from "../seo/jsonld/index";
import Navbar from "@/components/section/Navbar.astro";
import Footer from "@/components/section/Footer.astro";
import Whatsapp from "@/components/section/Whatsapp.astro";

// Dados de JSON-LD centralizados
const jsonLdData = {
  website: jsonLdWebsite,
  organization: jsonLdOrganization,
  services: jsonLdServices,
  faq: jsonLdFAQ,
};

// Tipagem autom√°tica baseada nas chaves do objeto
type JsonLdKey = keyof typeof jsonLdData;

const {
  title = config.company.title,
  description = config.company.description,
  canonical,
  ogImage = config.meta.social.image,
  jsonLdItems = [],
  jsonLdCustom = [],
} = Astro.props as {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  jsonLdItems?: JsonLdKey[];
  jsonLdCustom?: any[];
};

const jsonLdContent = [
  ...jsonLdCustom,
  ...((jsonLdItems && jsonLdItems.length > 0)
    ? jsonLdItems.map((item) => jsonLdData[item]).filter(Boolean)
    : []
  ),
];

// Fun√ß√£o para garantir que URLs sejam absolutas
const getAbsolute = (url: string) =>
  url.startsWith("http") ? url : `${config.meta.canonical.replace(/\/$/, "")}${url.startsWith("/") ? "" : "/"}${url}`;

const rybbitSiteId = "db3613bd7287";
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Favicon atualizado para m√∫ltiplos formatos -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Geist:wght@400;700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Geist:wght@400;700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap">
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={config.meta.author} />
    <meta name="copyright" content={config.meta.copyright} />
    <meta name="robots" content={config.meta.robots} />

    <!-- Canonical (s√≥ se passada explicitamente) -->
    {canonical && <link rel="canonical" href={getAbsolute(canonical)} />}

    <!-- Meta Tags Geogr√°ficas -->
    <meta name="geo.region" content={config.meta.geo.region} />
    <meta name="geo.placename" content={config.meta.geo.placename} />
    <meta name="geo.position" content={config.meta.geo.position} />

    <!-- Theme color para mobile (ajuste conforme brand) -->
    <meta name="theme-color" content="#EEF2FF">
    <meta name="format-detection" content="telephone=no" />

    <!-- Open Graph (aten√ß√£o para images absolutas) -->
    <meta property="og:type" content={config.meta.social.type} />
    <meta property="og:image" content={getAbsolute(ogImage)} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonical && <meta property="og:url" content={getAbsolute(canonical)} />}
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={config.company.social?.twitter?.url || ""} />
    <meta name="twitter:image" content={getAbsolute(ogImage)} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content={config.company.social?.twitter?.url || ""} />
    <script is:inline
      src="/scripts/rybbit.js"
      data-site-id={rybbitSiteId}
      async
      defer
    ></script>

    <!-- JSON-LD para SEO estruturado -->
    {
      jsonLdContent.length > 0 && jsonLdContent.map((ld) => (
        <script type="application/ld+json" set:html={JSON.stringify(ld)} />
      ))
    }
  </head>
  <body class="antialiased bg-body text-body">
    <Navbar />
    <main id="main-content" tabindex="-1">
      <slot />
    </main>
    <Whatsapp />
    <Footer />
    <!-- Carregue scripts globais apenas se absolutamente necess√°rios para toda a aplica√ß√£o! -->
    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        if (!window.rybbit) return console.warn("‚ö†Ô∏è Rybbit ainda n√£o carregado.");

        // Seleciona todos os elementos com atributo data-rybbit-event
        const trackables = document.querySelectorAll("[data-rybbit-event]");

        trackables.forEach((el) => {
          const eventName = el.getAttribute("data-rybbit-event");
          if (!eventName) return;

          el.addEventListener("click", () => {
            // Cria objeto com todas as props que come√ßam com data-rybbit-prop-
            const props = {};
            Array.from(el.attributes).forEach((attr) => {
              if (attr.name.startsWith("data-rybbit-prop-")) {
                const propName = attr.name.replace("data-rybbit-prop-", "");
                props[propName] = attr.value;
              }
            });

            // Dispara o evento no Rybbit
            try {
              window.rybbit.event(eventName, props);
              console.log(`üéØ Evento Rybbit: ${eventName}`, props);
            } catch (err) {
              console.error("‚ùå Erro ao enviar evento Rybbit:", err);
            }
          });
        });
      });
    </script>
  </body>
</html>